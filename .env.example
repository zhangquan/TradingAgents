# 环境配置示例文件
# 复制此文件为 .env 并根据需要修改配置

# 环境设置
# 可选值: development, production
# 默认: development
ENVIRONMENT=development

# 数据源设置
# 可选值: yahoo_finance, polygon, "" (空值表示根据环境自动选择)
# 默认: "" (自动选择)
# 开发环境默认使用 Polygon API
# 正式环境默认使用 Yahoo Finance
DATA_SOURCE=

# API 密钥设置
# Polygon API 密钥 (开发环境使用)
POLYGON_API_KEY=your_polygon_api_key_here

# 其他 API 密钥
FINNHUB_API_KEY=your_finnhub_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
ALIYUN_API_KEY=your_aliyun_api_key_here

# Reddit API 设置
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# 其他设置
REQUIRE_API_KEY=false
ONLINE_TOOLS=true
DEFAULT_LANGUAGE=en-US
REPORT_LANGUAGE=auto

# 数据目录设置
TRADINGAGENTS_DATA_DIR=./data
TRADINGAGENTS_RESULTS_DIR=./results

# LLM 设置
LLM_PROVIDER=aliyun
DEEP_THINK_LLM=qwen3-235b-a22b-instruct-2507
QUICK_THINK_LLM=qwen-plus
LLM_BACKEND_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 调试和限制设置
MAX_DEBATE_ROUNDS=1
MAX_RISK_DISCUSS_ROUNDS=1
MAX_RECUR_LIMIT=100